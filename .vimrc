syn on
set laststatus=2
set hls
set smartindent
set tabstop=2
set softtabstop=2
set shiftwidth=2
set foldmethod=syntax
colorscheme elflord
" vertical splitting will open the new window on the right. 
set splitright
"http://vim.wikia.com/wiki/Highlight_current_line
set cursorline
set bg=dark
set ruler


